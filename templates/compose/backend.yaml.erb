version: "3.8"

services:
  <%= @config['database']['host'] %>:
    image: postgres:13.6
    restart: on-failure
    volumes:
      - ../data/pg:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: <%= @config['database']['user'] %>
      POSTGRES_PASSWORD: <%= @config['database']['password'] %>
      POSTGRES_HOST_AUTH_METHOD: 'trust'

  adminer:
    image: adminer
    restart: always
    ports:
      - 8080:8080
