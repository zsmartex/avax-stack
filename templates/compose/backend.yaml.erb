version: "3.8"

services:
  <%= @config['database']['host'] %>:
    image: postgres
    restart: on-failure
    volumes:
      - ../data/db:/var/lib/mysql
    environment:
      POSTGRES_USER: <%= @config['database']['user'] %>
      POSTGRES_PASSWORD: <%= @config['database']['password'] %>
      POSTGRES_DB: blockscout
      POSTGRES_HOST_AUTH_METHOD: 'trust'
